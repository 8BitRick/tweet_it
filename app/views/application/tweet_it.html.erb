<div class="row">
  <div class="page-header">
    <h1>Your Local Leaders <small>and some not so local ones too...</small></h1>
  </div>
</div>
<div class="row">
  <div id="carousel-image-and-text" class="touchcarousel grey-blue">
    <ul class="touchcarousel-container">
      <%= render partial: "/users/user", collection: @users %>
      <%= render partial: "/influencers/influencer", collection: @influencers %>
    </ul>
  </div>
</div>
<div class="row top-buffer">
  <div class="col-md-6 well col-md-offset-3">
    Post your tweet!
    <%= form_tag url_for(controller: 'application', action: "post_tweet", format: :js), remote: true do %>
    <div class="input-group">
      <input name="tweet_to_post" id="tweet_text_box" type="text" class="form-control" placeholder="@Governator ... you are so great" aria-describedby="basic-addon1">
      <span class="input-group-btn">
        <%= submit_tag 'Tweet It!', class: 'btn btn-default', remote: true %>
      </span>
    </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <!--Tweet list of that politician-->
    <!--<#%= render template: 'tweets/_tweet_panel', controller: 'tweets', action: 'index', user: @user %>-->
    <%= render partial: 'tweets/tweet_panel' %>
  </div>
</div>

